# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/scamvax

# Cloudflare R2
R2_ENDPOINT_URL=https://<account_id>.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=your_r2_access_key
R2_SECRET_ACCESS_KEY=your_r2_secret_key
R2_BUCKET_NAME=scamvax

# DashScope (Qwen TTS-VC) — 仅后端使用，绝不暴露给客户端
DASHSCOPE_API_KEY=your_dashscope_api_key

# App
APP_ENV=development
BASE_URL=https://api.scamvax.com
SECRET_KEY=your_secret_key_here

# Rate limiting
RATE_LIMIT_PER_DEVICE=5        # 每设备每小时最大创建次数
RATE_LIMIT_WINDOW_SECONDS=3600

# Audio constraints
AUDIO_MAX_SIZE_MB=10
AUDIO_MIN_DURATION_S=10
AUDIO_MAX_DURATION_S=20

# Share lifecycle
SHARE_TTL_HOURS=72
SHARE_MAX_CLICKS=50
